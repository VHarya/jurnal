<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="480.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vharya.jurnal.Controllers.Home">
   <center>
      <ListView fx:id="listviewJurnal" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Jurnal">
               <font>
                  <Font name="Liberation Sans Bold" size="18.0" />
               </font>
            </Label>
            <HBox HBox.hgrow="ALWAYS" />
            <Button fx:id="buttonCreate" mnemonicParsing="false" text="Buat Jurnal" />
            <Button fx:id="buttonEdit" mnemonicParsing="false" text="Ubah Jurnal" />
            <Button fx:id="buttonDelete" layoutX="640.0" layoutY="10.0" mnemonicParsing="false" text="Hapus Jurnal" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
   <bottom>
      <HBox alignment="BOTTOM_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="buttonLogout" mnemonicParsing="false" text="Logout" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
